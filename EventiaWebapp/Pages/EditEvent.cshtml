@page
@model EventiaWebapp.Pages.EditEventModel
@{
    ViewData["Title"] = "Edit Event";
}
<div class="my-container">
   
    <div class="row my-row">
        <h3>Edit Event</h3>
        
        <form id="registerForm" method="post">
            <p>Edit information about your event.</p>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Title" class="form-control" aria-required="true"/>
                <label asp-for="Input.Title" class="form-label"></label>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Input.Description" class="form-control" aria-required="true"></textarea>
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Place" class="form-control" aria-required="true"/>
                <label asp-for="Input.Place"></label>
                <span asp-validation-for="Input.Place" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Date" class="form-control" aria-required="true"/>
                <label asp-for="Input.Date"></label>
                <span asp-validation-for="Input.Date" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NoOfSeats" class="form-control" aria-required="true"/>
                <label asp-for="Input.NoOfSeats"></label>
                <span asp-validation-for="Input.NoOfSeats" class="text-danger"></span>
            </div>
            <input type="hidden" name="eventId" value="@Model.Evnt.Id"/>
            <button id="registerSubmit" type="submit" class="btn btn-info my-btn">Confirm</button>
        </form>
        <form asp-page-handler="delete" method="post">
            <input type ="hidden" name="eventId" value="@Model.Evnt.Id" />
            <button class="btn btn-info my-btn" type="submit">Delete</button>
        </form>
    </div>
</div>
