@page
@model EventiaWebapp.Pages.AddEventModel
@{
    ViewData["Title"] = "Add new Event";
}
<div class="my-container">
   
    <div class="row my-row">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Fill out information about your event.</h4>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Title" class="form-control" autocomplete="name" aria-required="true"/>
                <label asp-for="Input.Title" class="form-label"></label>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-floating" @*style="height:180px"*@>
                <textarea asp-for="Input.Description" class="form-control" autocomplete="name" aria-required="true"></textarea>
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Place" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Place"></label>
                <span asp-validation-for="Input.Place" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Date" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Date"></label>
                <span asp-validation-for="Input.Date" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NoOfSeats" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.NoOfSeats"></label>
                <span asp-validation-for="Input.NoOfSeats" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-info my-btn confirm-btn">Register</button>
        </form>

    </div>
</div>
    