@inject SignInManager<EventiaUser> SignInManager
@inject UserManager<EventiaUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")">
                <button  type="submit" class="btn btn-info my-btn">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-info my-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-info my-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>